<%- include('../../partials/head', { title: 'Cadastro de Usuário' }) %>
<%- include('../../partials/navbar') %>

<div class="container">
  <div class="card mt-4">
    <div class="card-header">
      <h2>Criação de Usuário</h2>
    </div>
    <div class="card-body">
      <form action="/users/create" method="post">
        <div class="mb-3">
          <label for="email" class="form-label">Email address</label>
          <input class="form-control" type="email" name="email" placeholder="email@acme.com">
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input class="form-control" type="password" name="password" placeholder="********">
        </div>
        <div class="d-grid">
          <button class="btn btn-success btn-block" type="submit">Criar</button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('../../partials/foot') %>