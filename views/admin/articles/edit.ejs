<%- include('../../partials/head', { title: 'Editar Artigo' }) %>
<%- include('../../partials/navbar') %>

<div class="container">
  <br>
  <div class="card">
    <div class="card-header">
      <h2>Editar Artigo</h2>
    </div>
    <div class="card-body">
      <form action="/articles/update" method="post">
        <input type="hidden" name="id" value="<%= article.id %>">
        <input class="form-control" type="text" name="title" placeholder="Defina o tÃ­tulo da categoria" value="<%= article.title %>">
        <br>
        <textarea class="form-control" name="body" id="article" placeholder="Escreva o artigo aqui">
          <%- article.body %>
        </textarea>
        <br>
        <label class="form-label" for="category">Categoria</label>
        <select class="form-control" name="category" id="category">
          <% categories.forEach(category => { %>
            <option value="<%= category.id %>" <%- category.id == article.categoryId ? 'selected' : '' %>>
              <%= category.title %>
            </option>  
          <% }); %>
        </select>
        <br>
        <button class="btn btn-success">Atualizar</button>
      </form>
    </div>
  </div>
</div>

<%- include('../../partials/foot') %>

<script src="/tinymce/tinymce.min.js"></script>
<script>
  tinymce.init({
    selector: '#article',
    plugins: [
      'advlist', 'autolink', 'link', 'image', 'lists', 'print', 'preview', 'hr', 'searchreplace', 'wordcount', 'fullscreen', 'insertdatetime', 'media', 'save', 'table', 'past', '  emoticons'
    ],
    language: 'pt_BR'
  })
</script>


